<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bossr.Pages.CreaturesPage"
             Title="Creatures">
  <ListView x:Name="ListView" ItemsSource="{Binding Creatures}" IsPullToRefreshEnabled="True" Refreshing="ListView_OnRefreshing" ItemTapped="ListView_OnItemTapped" IsRefreshing="{Binding IsLoading}">
    <ListView.ItemTemplate>
      <DataTemplate>
        <SwitchCell Text="{Binding Name}" On="{Binding Monitored}" />
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>