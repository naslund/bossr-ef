<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bossr.Pages.CreaturesPage"
             Title="Creatures">
  <ListView IsGroupingEnabled="true" ItemsSource="{Binding CreaturesGrouped}" GroupDisplayBinding="{Binding Key.Name}" GroupShortNameBinding="{Binding Key.Name}" SeparatorVisibility="None">
    <ListView.GroupHeaderTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="{Binding Key.Color}">
              <Label Text="{Binding Key.Name}" FontSize="Small" TextColor="#FFFFFF" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"/>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.GroupHeaderTemplate>
    <ListView.ItemTemplate>
      <DataTemplate>
        <TextCell Text="{Binding Name}" Detail="{Binding MonitoredStatus}" />
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>